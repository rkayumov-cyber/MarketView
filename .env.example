# MarketView Environment Configuration
# Copy this file to .env and fill in your values

# FRED API (https://fred.stlouisfed.org/docs/api/api_key.html)
FRED_API_KEY=your_fred_api_key_here

# Twelve Data API (https://twelvedata.com)
TWELVE_DATA_API_KEY=

# Reddit API (https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=MarketView/1.0

# Database
DATABASE_URL=postgresql+asyncpg://marketview:marketview@localhost:5432/marketview

# Redis
REDIS_URL=redis://localhost:6379/0

# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Security â€” set API_KEY to require X-API-Key header on all endpoints
# Leave blank to disable auth (suitable for local dev)
API_KEY=
# Comma-separated CORS origins (parsed as JSON list by pydantic-settings)
CORS_ORIGINS=["http://localhost:8501","http://localhost:5173"]

# Report Settings
DEFAULT_REPORT_LEVEL=2
REPORT_OUTPUT_DIR=./reports

# Cache TTL (seconds)
CACHE_TTL_FRED=3600
CACHE_TTL_REDDIT=900
CACHE_TTL_CRYPTO=300
CACHE_TTL_EQUITY=900
